    <section class="metrics">
        <h2>Our Success in Numbers</h2>
        <div class="contain">
            <div class="content">
                <span>
                    <h3 class="counter" data-target="500">0+</h3>
                    <p>Tours Completed</p>
                </span>
            </div>
            <div class="content">
                <span>
                    <h3 class="counter" data-target="10000">0+</h3>
                    <p>Travelers Inspired</p>
                </span>
            </div>
            <div class="content">
                <span>
                    <h3 class="counter" data-target="10">0+</h3>
                    <p>Years of experience</p>
                </span>
            </div>
            <div class="content">
                <span>
                    <h3 class="counter" data-target="25">0+</h3>
                    <p>Countries explored</p>
                </span>
            </div>
        </div>
    </section>

    <script>
        // Select all counters
    const counters = document.querySelectorAll('.counter');

    counters.forEach(counter => {
      let currentCount = 0;
      const updateCount = () => {
        const target = +counter.getAttribute('data-target'); // convert to number
        const increment = Math.ceil(target / 10); // 50 steps for smoother animation

        if(currentCount < target) {
          currentCount += increment;
          if(currentCount > target) currentCount = target;
          counter.innerText = currentCount.toLocaleString() + '+';
          setTimeout(updateCount, 100); // update every 100ms
        } else {
          counter.innerText = target.toLocaleString() + '+';
        }

      };
      updateCount();
    });
    </script>

